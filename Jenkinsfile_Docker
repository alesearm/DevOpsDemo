pipeline {
    agent any

    environment {
        DOCKER_HOST = "tcp://host.docker.internal:2375"
        DOCKER_IMAGE = "alesearm/lj11"
        CONTAINER_NAME = "devopsdemo"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/alesearm/DevOpsDemo.git']])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Test') {
            steps {
                sh 'echo test'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'docker stop $CONTAINER_NAME'
                    sh 'docker rm $CONTAINER_NAME'
                    sh 'docker run  -p 9050:8080 --name $CONTAINER_NAME -d $DOCKER_IMAGE'
                }
            }
        }
    }
}
